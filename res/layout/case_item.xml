<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/radiobutton_off"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/check_off" />

        <TextView
            android:id="@+id/test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/radiobutton_off"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="testInit"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/test_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_toRightOf="@id/radiobutton_off"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            android:text="testInit"
            android:textSize="10sp" />

        <Button
            android:id="@+id/item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/test_name"
            android:text="run"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/result_log"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

</LinearLayout>